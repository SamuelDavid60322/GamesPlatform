@model CasinoResult

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Rock, Paper, Scissors</title>
    <style>
        .game-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        form {
            display: flex;
            gap: 1rem;
        }

        .win {
            color: green;
        }

        .lose {
            color: red;
        }

        .tie {
            color: orange;
        }
    </style>
</head>
<body>
    <h1 class="text-white text-center">Rock, Paper, Scissors</h1>
    <div class="game-container">

        <form asp-action="Play" method="post">
            <input type="submit" name="userChoice" value="Rock" />
            <input type="submit" name="userChoice" value="Paper" />
            <input type="submit" name="userChoice" value="Scissors" />
        </form>

        @if (Model != null && !string.IsNullOrEmpty(Model.UserChoice))
        {
            var resultClass = Model.Win ? "win" : (Model.Result == "It's a tie!" ? "tie" : "lose");
            <div>
                <h2 class="text-white">Your choice: @Model.UserChoice</h2>
                <h2 class="text-white">Computer's choice: @Model.ComputerChoice</h2>
                <h2 class="text-white">Date: @Model.DateResultPlaced</h2>
                <h2 class="@resultClass">Result: @Model.Result</h2>
                @if (Model.Win)
                {
                    <h3 class="win text-white">Amount Won: €@Model.AmountWon</h3>
                }
            </div>
        }
    </div>
</body>
</html>