@model CasinoResult

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Rock, Paper, Scissors</title>
    <style>
        /* Add your styles here */
        .win {
            color: green;
        }

        .lose {
            color: red;
        }

        .tie {
            color: orange;
        }
    </style>
</head>
<body class="rps">
    <h1 class="text-white text-center">Rock, Paper, Scissors</h1>
    <div class="game-container">

        <img src="~/image/gameimages/rockk.png" alt="Rock" id="rock" style="cursor: pointer;" />
        <img src="~/image/gameimages/papers.png" alt="Paper" id="paper" style="cursor: pointer;" />
        <img src="~/image/gameimages/scissorss.png" alt="Scissors" id="scissors" style="cursor: pointer;" />

        @if (Model != null && !string.IsNullOrEmpty(Model.UserChoice))
        {
            var resultClass = Model.Win ? "win" : (Model.Result == "It's a tie!" ? "tie" : "lose");
            <div>
                <h2 class="text-white">Your choice: @Model.UserChoice</h2>
                <h2 class="text-white">Computer's choice: @Model.ComputerChoice</h2>
                <h2 class="@resultClass">Result: @Model.Result</h2>
                @if (Model.Win)
                {
                    <h3 class="win text-white">Amount Won: €@Model.AmountWon</h3>
                }
            </div>
        }
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>