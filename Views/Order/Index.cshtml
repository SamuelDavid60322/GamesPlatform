@model List<Order>

@{
    ViewData["Title"] = "All orders";
}

<div class="row text-white">
    <div class="col-md-8 offset-2">
        <p>
            <h4>List of all your orders</h4>
        </p>

        <table class="table  table-striped bg-dark text-white" style="border-radius: 1rem;"">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Items</th>
                    <th>Total</th>
                    <th>User</th>    
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td class="align-middle">@order.OrderID</td>
                        <td class="align-middle">
                            <ul style="list-style-type:none">
                                @foreach (var item in order.OrderDetails)
                                {
                                    <li>
                                        <div class="alert alert-info" role="alert">
                                            <span class="badge bg-primary">@item.Amount</span> [@item.Price.ToString("c")] - @item.Game.GameName
                                        </div>
                                    </li>
                                }
                            </ul>
                        </td>
                        <td class="align-middle">
                            @order.OrderDetails.Select(m => m.Game.Price * m.Amount).Sum().ToString("c")
                        </td>
                        <td class="align-middle"> @order.UserID </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>