@{
    ViewData["Title"] = "Transfer Funds";
}

<h1 class="text-white">Transfer winnings to Stripe, Paypal</h1>
<p class="text-white">To transfer your winnings into your personal accounts, you must have an Stripe account. If you do not have one, please register for one at <a href="https://stripe.com/ie">this link here</a></p>

<h3 class="text-white">If you already have an account, enter your registered email and the amount you want to transfer and click 'Transfer Funds'</h3>

<form asp-action="Checkout" method="post" class="form-horizontal text-white" role="form">
    <div class="form-group">
        <label class="col-md-2 control-label">IBAN</label>
        <div class="col-md-5 ">
            <input class="form-control" />
            <span class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label">Amount To Withdraw</label>
        <div class="col-md-5">
            <input class="form-control" />
            <span class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="btn-group col-md-offset-2 col-md-6">
            <button class="btn btn-success" type="submit">Transfer Funds</button>
            @*<input class="btn btn-default" type="submit" value="Return " />*@
        </div>
    </div>

</form>