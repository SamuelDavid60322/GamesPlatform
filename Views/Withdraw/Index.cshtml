@model Withdraw
@{
    ViewData["Title"] = "Transfer Funds";
}

<h1 class="text-white">Transfer winnings to Stripe, Paypal</h1>
<p class="text-white">To transfer your winnings into your personal accounts, you must have an Stripe account. If you do not have one, please register for one at <a href="https://stripe.com/ie">this link here</a></p>

<h3 class="text-white">If you already have an account, enter your registered PayPal email and the amount you want to transfer and click 'Transfer Funds'</h3>
<form asp-action="Index" method="post" class="card">
    <div class="card-body">

        <h4 class="card-title text-dark">Transfer Balance to PayPal</h4>

        <div class="form-group text-dark">
            <label asp-for="PayPalEmail"></label>
            <input asp-for="PayPalEmail" class="form-control" />
            <span asp-validation-for="PayPalEmail" class="text-danger"></span>
        </div>

        <div class="form-group text-dark">
            <label asp-for="AmountTransfered"></label>
            <input asp-for="AmountTransfered" class="form-control" />
            <span asp-validation-for="AmountTransfered" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Submit" />
        </div>

    </div>
</form>